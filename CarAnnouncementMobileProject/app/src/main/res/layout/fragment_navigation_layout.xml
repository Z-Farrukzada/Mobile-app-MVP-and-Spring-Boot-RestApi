<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_header_container"
        android:padding="@dimen/padding_x_large"
        android:background="@color/blueDark"
        tools:ignore="UselessParent">

     <ImageView
         android:id="@+id/custom_nav_header_image"
         android:layout_width="@dimen/width_small"
         android:src="@drawable/usernavbar"
         android:layout_height="@dimen/height_small"
         tools:ignore="ContentDescription"
         app:tint="@color/white" />

        <TextView
            android:id="@+id/custom_nav_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_nav_header_image"
            android:textColor="@color/white"
            android:fontFamily="@font/nerk"
            android:layout_alignParentStart="true"
            android:text="Zaur"
            android:textSize="@dimen/text_small"
            android:padding="@dimen/padding_small"
            />

        <TextView
            android:id="@+id/custom_nav_user_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_nav_user_username"
            android:textColor="@color/white"
            android:fontFamily="@font/nerk"
            android:text="zaurf@code.edu.az"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_x_small"
            />


    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>