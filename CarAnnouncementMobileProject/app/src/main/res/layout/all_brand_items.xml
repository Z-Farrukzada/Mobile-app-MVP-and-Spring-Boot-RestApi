<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_drawable">


    <ImageView
        android:id="@+id/all_brand_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_width="@dimen/width_medium"
        android:layout_height="@dimen/width_small"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/all_brands_car_name"
        android:layout_toRightOf="@id/all_brand_image"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="@dimen/width_small"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:fontFamily="@font/dancing"
        android:text="Audi"
        android:textAlignment="center"
        android:textColor="@color/blueDark"
        android:textSize="@dimen/text_medium" />

</RelativeLayout>